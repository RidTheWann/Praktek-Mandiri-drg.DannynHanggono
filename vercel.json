{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "api/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/daily-visits", "dest": "api/daily-visits.ts" },
    { "src": "/api/data-entries", "dest": "api/data-entries.ts" },
    { "src": "/api/statistics", "dest": "api/statistics.ts" },
    { "src": "/assets/(.*)", "dest": "/dist/assets/$1" },
    { "src": "/(.*)", "dest": "/dist/index.html" }
  ]
}