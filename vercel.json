{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "includeFiles": ["client/**", "dist/public/**"] }
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": { "includeFiles": ["dist/index.js", "dist/public/**"] }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "client/index.html"
    }
  ]
}