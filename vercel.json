{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "includeFiles": ["client/**", "dist/public/**"] }
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": { "includeFiles": ["dist/index.js", "dist/public/**"] }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/assets/(.*)",
      "headers": { "cache-control": "s-maxage=31536000,immutable" },
      "dest": "/dist/public/assets/$1"
    },
    {
      "src": "/src/(.*)",
      "headers": { "cache-control": "s-maxage=31536000,immutable" },
      "dest": "/dist/public/src/$1"
    },
    {
      "src": "/(?!api/)(.*)",
      "dest": "/dist/public/index.html"
    }
  ]
}