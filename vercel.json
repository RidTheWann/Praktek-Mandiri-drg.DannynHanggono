{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "dist/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "dist/index.js" },
    { "src": "/assets/(.*)", "dest": "/dist/public/assets/$1" },
    { "src": "/src/(.*)", "dest": "/dist/public/src/$1" },
    { "src": "/(.*)", "dest": "/dist/public/index.html" }
  ]
}